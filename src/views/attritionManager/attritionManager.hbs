<div class="attrition-manager">
  <!-- Navigation -->
  <nav class="attrition-steps">
    {{#each steps}}
      <button class="step-button" data-step="{{stepIndex}}" {{#if isActive}}active{{/if}}>
        {{name}}
      </button>
    {{/each}}
  </nav>
  <h2>Attrition Manager</h2>

  <!-- Main Content -->
  <div class="step-content">
    <!-- Partial Rendering -->
    {{#with (lookup steps currentStepIndex)}}
      {{renderPartial this.partial}}
    {{/with}}
  </div>

  <!-- Navigation Buttons -->
  <div class="step-navigation">
    <button class="step-prev" {{#unless hasPreviousStep}}disabled{{/unless}}>Previous Step</button>
    <button class="step-next" {{#unless hasNextStep}}disabled{{/unless}}>Next Step</button>
  </div>
</div>